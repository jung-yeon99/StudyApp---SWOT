<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".GroupActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/lightpurple"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="94dp"
            android:layout_height="35dp"
            android:fontFamily="@font/nanumbarunpen"
            android:gravity="center"
            android:text="내 정보"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/delete_bt2"
            app:layout_constraintStart_toStartOf="@+id/imageView18"
            app:layout_constraintTop_toTopOf="@+id/delete_bt2"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/delete_bt"
            app:layout_constraintStart_toStartOf="@+id/imageView16"
            app:layout_constraintTop_toTopOf="@+id/delete_bt"
            app:srcCompat="@drawable/settings" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/studycheck"
            app:layout_constraintStart_toStartOf="@+id/imageView13"
            app:layout_constraintTop_toTopOf="@+id/studycheck"
            app:srcCompat="@drawable/pencil" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/attend_bt"
            app:layout_constraintStart_toStartOf="@+id/imageView14"
            app:layout_constraintTop_toTopOf="@+id/attend_bt"
            app:srcCompat="@drawable/message" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/say_bt"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/say_bt"
            app:layout_constraintVertical_bias="0.473"
            app:srcCompat="@drawable/info" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/notify_bt"
            app:layout_constraintStart_toStartOf="@+id/imageView17"
            app:layout_constraintTop_toTopOf="@+id/notify_bt"
            app:srcCompat="@drawable/error" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="0dp"
            android:layout_height="138dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/que1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:srcCompat="@drawable/edit_round" />

        <TextView
            android:id="@+id/groupname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/nanumbarunpen"
            android:paddingLeft="10dp"
            android:text="name"
            android:textColor="#64656A"
            android:textSize="19dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/imageView7" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nanumbarunpen"
            android:text="  오픈 채팅방 주소 :"
            android:textColor="#64656A"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/groupname"
            app:layout_constraintTop_toBottomOf="@+id/groupname" />

        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:minHeight="22dp"
            android:textColor="#64656A"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@+id/groupname"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <Button
            android:id="@+id/say_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/lightgrey"
            android:elevation="20dp"
            android:fontFamily="@font/nanumbarunpen"
            android:padding="15dp"
            android:text="스터디 공지사항"
            android:textColor="@color/textgrey"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/address"
            app:layout_constraintStart_toEndOf="@+id/imageView15"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            app:strokeColor="#EDEDEF"
            app:strokeWidth="1.5dp" />

        <Button
            android:id="@+id/check_list_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/lightgrey"
            android:elevation="20dp"
            android:fontFamily="@font/nanumbarunpen"
            android:padding="15dp"
            android:text="체크리스트"
            android:textColor="@color/textgrey"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/say_bt"
            app:layout_constraintStart_toStartOf="@+id/say_bt"
            app:layout_constraintTop_toBottomOf="@+id/say_bt"
            app:strokeColor="#EDEDEF"
            app:strokeWidth="1.5dp" />

        <Button
            android:id="@+id/studycheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/lightgrey"
            android:elevation="20dp"
            android:fontFamily="@font/nanumbarunpen"
            android:padding="15dp"
            android:text="공부양 체크"
            android:textColor="@color/textgrey"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/check_list_bt"
            app:layout_constraintStart_toStartOf="@+id/check_list_bt"
            app:layout_constraintTop_toBottomOf="@+id/check_list_bt"
            app:strokeColor="#EDEDEF"
            app:strokeWidth="1.5dp" />

        <Button
            android:id="@+id/notify_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/lightgrey"
            android:elevation="20dp"
            android:fontFamily="@font/nanumbarunpen"
            android:padding="15dp"
            android:text="신고"
            android:textColor="@color/textgrey"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/studycheck"
            app:layout_constraintStart_toStartOf="@+id/studycheck"
            app:layout_constraintTop_toBottomOf="@+id/studycheck"
            app:strokeColor="#EDEDEF"
            app:strokeWidth="1.5dp" />

        <Button
            android:id="@+id/attend_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/lightgrey"
            android:elevation="20dp"
            android:fontFamily="@font/nanumbarunpen"
            android:padding="15dp"
            android:text="출석 확인"
            android:textColor="@color/textgrey"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/notify_bt"
            app:layout_constraintStart_toStartOf="@+id/notify_bt"
            app:layout_constraintTop_toBottomOf="@+id/notify_bt"
            app:strokeColor="#EDEDEF"
            app:strokeWidth="1.5dp" />

        <Button
            android:id="@+id/delete_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/lightgrey"
            android:elevation="20dp"
            android:fontFamily="@font/nanumbarunpen"
            android:padding="15dp"
            android:text="스터디 탈퇴"
            android:textColor="@color/textgrey"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/attend_bt"
            app:layout_constraintStart_toStartOf="@+id/attend_bt"
            app:layout_constraintTop_toBottomOf="@+id/attend_bt"
            app:strokeColor="#EDEDEF"
            app:strokeWidth="1.5dp" />

        <Button
            android:id="@+id/delete_bt2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/lightgrey"
            android:elevation="20dp"
            android:fontFamily="@font/nanumbarunpen"
            android:padding="15dp"
            android:text="스터디원 관리"
            android:textColor="@color/textgrey"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/attend_bt"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/delete_bt"
            app:layout_constraintTop_toBottomOf="@+id/delete_bt"
            app:strokeColor="#EDEDEF"
            app:strokeWidth="1.5dp" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/check_list_bt"
            app:layout_constraintStart_toStartOf="@+id/imageView15"
            app:layout_constraintTop_toTopOf="@+id/check_list_bt"
            app:layout_constraintVertical_bias="0.307"
            app:srcCompat="@drawable/check" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>